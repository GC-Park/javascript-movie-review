{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["functional", "@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "max-depth": ["error", 3],
    "max-params": ["error", 3],
    "class-methods-use-this": "off"
  },
  "overrides": [
    {
      "files": ["__tests__/**/*.ts"],
      "rules": {
        "max-lines-per-function": "off",
        "no-new": "off"
      }
    }
  ]
}
